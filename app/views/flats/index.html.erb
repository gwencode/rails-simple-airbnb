<div class="container my-3">

  <h1>All our Flats (<%= Flat.count %>)</h1>

  <div class="row">
      <% @flats.each do |flat| %>
        <div class="card g-col-4 m-3 p-0" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h2>
            <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
            <p class="card-text"><%= raw("<i class='fa-solid fa-people-group'></i>")%> <%=flat.number_of_guests %>
            <%= raw("<i class='fa-solid fa-euro-sign'></i>")%> <%= flat.price_per_night %></p>
          </div>
          <div class="card-footer">
            <%= link_to "More info", flat_path(flat), class: "card-link text-primary"%>
            <%= link_to "Edit", edit_flat_path(flat), class: "card-link text-warning"%>
            <%= link_to "Remove", "#", class: "card-link text-danger"%>
          </div>
        </div>
      <% end %>
  </div>
</div>
