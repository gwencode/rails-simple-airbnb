<div class="container my-3">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p class="flat-show-address"><%= @flat.address %></p>
      </div>
       <div class="flat-show-card">
        <h3>A bit more about this flat</h3>
        <p><%= @flat.description %></p>
      </div>
    </div>
    <div class="col-4">
        <div class="flat-show-card">
        <h5>Book this place!</h5>
        <%= simple_form_for :booking do |f| %>
          <%= f.input :start_date, as: :date, label: "From:" %>
          <%= f.input :end_date, as: :date, label: "To:" %>
          <%= f.submit "Book", class: "btn btn-success" %>
        <% end %>
      </div>
      <div class="flat-show-card">
        <h3>Details</h3>
        <div class="d-flex ">
          <div class="d-flex me-3"><%= @flat.number_of_guests %> people</div>
          <div class="d-flex"><%= @flat.price_per_night %> â‚¬</div>
        </div>
      </div>
      <div class="flat-show-card d-flex justify-content-between">
        <h6 class="no-mb">Share</h6>
        <div class="d-flex">
          <i class="fa-brands fa-facebook-square me-2"></i>
          <i class="fa-brands fa-twitter-square me-2"></i>
          <i class="fa-brands fa-pinterest-square me-2"></i>
        </div>
      </div>
    </div>
  </div>
</div>
